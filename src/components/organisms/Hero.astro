---
import CircledText from "@components/atoms/CircledText.astro";
import HeroBackground from "@components/molecules/HeroBackground.astro";
---

<section>
    <div class="container">
        <div class="text">
            <h1>Jack of all trades master of none</h1>
            <div class="block">
                <p>but oftentimes better than a master of</p>
                <CircledText text="one" />
            </div>
        </div>
    </div>

    <HeroBackground />
</section>

<style>
    section {
        position: relative;
        min-height: 100vw;
    }

    .container {
        padding-top: calc(3 * (var(--nav-height) + 2 * var(--spacer)));
        padding-bottom: calc(var(--nav-height) + 3 * var(--spacer));
    }

    .text {
        h1 {
            font-weight: var(--fw-extra-bold);
            padding-bottom: 0;
            max-width: 16rem;
        }

        .block {
            text-align: end;
            max-width: 10rem;
            margin-left: auto;
            margin-top: var(--spacer);
        }

        p {
            display: inline;
        }
    }

    @media (min-width: 40rem) {
        .container {
            padding-top: calc(2.5 * (var(--nav-height) + 2 * var(--spacer)));
            padding-bottom: calc(var(--nav-height) + 3 * var(--spacer));
        }

        section {
            min-height: 80vh;
        }

        .text {
            h1 {
                max-width: 37rem;
            }

            .block {
                max-width: 14rem;
                font-size: var(--fs-medium);
            }
        }
    }
</style>
