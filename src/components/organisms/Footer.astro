---
import SocialLink from "@components/atoms/SocialLink.astro";
import iconGithub from "@assets/icons/github.svg?raw";
import iconLinkedin from "@assets/icons/linkedin.svg?raw";
import iconInstagram from "@assets/icons/instagram.svg?raw";

const socialLinks = [
    {
        name: "GitHub",
        url: "https://github.com/limisie",
        username: "limisie",
        icon: iconGithub,
    },
    {
        name: "LinkedIn",
        url: "https://www.linkedin.com/in/limisie/",
        username: "limisie",
        icon: iconLinkedin,
    },
    {
        name: "Instagram",
        url: "https://www.instagram.com/yajfuy/",
        username: "yajfuy",
        icon: iconInstagram,
    },
];
---

<footer>
    <div class="container">
        <h4>Contact</h4>
        <a href="mailto:k.limisiewicz@gmail.com" aria-label="send me an e-mail"
            >k.limisiewicz@gmail.com</a
        >
        <a href="tel:+48507087555" aria-label="call me">+48 507 087 555</a>

        <div id="details" class="flex">
            <p class="light-font">
                Copyright 2024 &copy; Kaja Limisiewicz. All right reserved
            </p>
            <div id="social-links" class="flex">
                {
                    socialLinks.map((link) => (
                        <SocialLink
                            name={link.name}
                            url={link.url}
                            username={link.username}
                            icon={link.icon}
                        />
                    ))
                }
            </div>
        </div>
    </div>
</footer>

<style>
    footer {
        background: var(--clr-surface);
        padding-block: calc(2 * var(--spacer));
    }

    .container {
        h4 {
            margin-bottom: 2rem;
        }

        > a {
            display: block;
            width: fit-content;
            margin-bottom: 0.5rem;
        }
    }

    #social-links {
        align-items: end;
        justify-content: end;
    }

    #details {
        flex-direction: column-reverse;
        align-items: start;
        margin-top: 2rem;
    }

    @media (min-width: 40rem) {
        #details {
            flex-direction: unset;
            align-items: end;
            margin-top: 1.5rem;
        }
    }
</style>
