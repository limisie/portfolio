---
const { url, name, username, icon, ...rest } = Astro.props;
---

<a href={url} aria-label={`go to my profile on ${name}`} {...rest}>
    <Fragment set:html={icon} />
</a>

<style is:inline>
    svg.social-link {
        width: 2rem;
        height: 2rem;

        .background {
            fill: var(--clr-text);
            transition: opacity 0.3s ease-in-out;
        }

        .foreground {
            fill: var(--clr-surface);
        }

        &:hover {
            .background {
                opacity: 0.5;
            }
        }
    }
</style>
