---
const { href = "/" } = Astro.props;
---

<a href={href}>
    <p><slot /></p>
    <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M12.7854 5.61523L18.771 12L12.7854 18.3847L11.9646 17.6152L16.7016 12.5625H6V11.4375H16.7016L11.9646 6.38467L12.7854 5.61523Z"
        ></path>
    </svg>
</a>

<style>
    a:hover {
        opacity: 0.5;

        svg {
            transform: translateX(3px);
        }
    }

    p {
        display: inline;
    }

    svg {
        vertical-align: bottom;
        fill: var(--clr-text);
        margin-left: -2px;

        transition: transform 0.3s ease-in-out;
    }
</style>
