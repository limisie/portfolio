---
const { rootDir, tags } = Astro.props;
---

<div class="flex">
    {
        tags.map((tag) => (
            <a class="light-font" href={`/${rootDir}/${tag}`} aria-label={`go to page with posts about ${tag}`} >
                {tag}
            </a>
        ))
    }
</div>

<style>
    .flex {
        justify-content: start;
        gap: 1rem;

        > a {
            z-index: 1;

            &:hover {
                opacity: 1;
            }
        }
    }
</style>
