---
import Head from "@layouts/Head.astro";
import Header from "@components/organisms/Header.astro";
import Footer from "@components/organisms/Footer.astro";

const black = "#252525";
const darkGrey = "#2C2C2C";
const white = "#F6F6F6";
const grey = "#E8ECED";
const red = "#BC523C";
const blue = "#6F818B";
const darkBlue = "#4F6069";

const {
    title = "Kaja Limisiewicz's personal site",
    description = "Discover my programming skills and learn about my technical insights through my portfolio and blog. Immerse yourself in the world of coding, website development and design with me.",
    image = "/images/limi.jpg",
} = Astro.props;

const cookieTheme = Astro.cookies.get("theme")?.value || "light";
---

<html lang="en" data-theme={cookieTheme}>
    <Head title={title} description={description} image={image} />
    <body>
        <Header theme={cookieTheme} />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style define:vars={{ black, darkGrey, white, grey, red, blue, darkBlue }} is:global>
    :root {
        scroll-behavior: smooth;
        
        --spacer: 1rem;
        --container-width: 75rem;
        --container-padding: 1rem;
        --nav-height: 3rem;

        --ff-rubik: "Rubik", sans-serif;
        --ff-montserrat: "Montserrat", sans-serif;
        --ff-quicksand: "Quicksand", sans-serif;

        --fs-h1: 1.75rem;
        --fs-h2: 1.25rem;
        --fs-h3: 1.375rem;
        --fs-h4: 1rem;

        --fs-p: 1rem;
        --fs-medium: 1.375rem;
        --fs-small: 0.875rem;

        --fw-light: 300;
        --fw-medium: 500;
        --fw-semi-bold: 600;
        --fw-bold: 700;
        --fw-extra-bold: 800;

        --box-shadow: 0 0.1rem 0.25rem rgba(44, 44, 44, 0.05);

        --clr-primary: var(--red);
        --clr-secondary: var(--blue);
        --clr-secondary-variant: var(--darkBlue);
    }

    [data-theme="light"] {
        --clr-background: var(--white);
        --clr-surface: var(--grey);
        --clr-text: var(--darkGrey);
        color-scheme: light;
    }

    [data-theme="dark"] {
        --clr-background: var(--black);
        --clr-surface: var(--darkGrey);
        --clr-text: var(--grey);
        color-scheme: dark;
    }

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4,
    p {
        margin: 0;
    }

    body {
        font-family: var(--ff-rubik);
        font-size: var(--fs-p);
        font-weight: var(--fw-light);
        color: var(--clr-text);
        margin: 0;
        line-height: 1.2;

        display: flex;
        flex-direction: column;
        min-height: 100vh;
        justify-content: space-between;

        background: linear-gradient(180deg, var(--clr-surface) 100vw, var(--clr-background) 100vw);
        background-repeat: no-repeat;
    }

    h1 {
        font-family: var(--ff-montserrat);
        font-size: var(--fs-h1);
        font-weight: var(--fw-extra-bold);
    }

    h2 {
        font-family: var(--ff-montserrat);
        font-size: var(--fs-h2);
        font-weight: var(--fw-bold);
    }

    h3 {
        font-family: var(--ff-quicksand);
        font-size: var(--fs-h3);
        font-weight: var(--fw-medium);
    }

    h4 {
        font-family: var(--ff-rubik);
        font-size: var(--fs-h4);
        font-weight: var(--fw-semi-bold);
    }

    p {
        line-height: 1.4;
    }

    a {
        color: var(--clr-text);
        text-decoration: none;

        &:hover {
            cursor: pointer;
        }
    }

    img {
        width: 100%;
        height: auto;
        object-fit: cover;
        display: block;
    }

    button {
        background: none;
        border: none;
        padding: 0;
        vertical-align: middle;

        &:hover {
            cursor: pointer;
        }
    }

    section {
        margin-bottom: calc(4 * var(--spacer));
    }

    section:first-of-type {        
        padding-top: calc(3.5 * var(--spacer) + var(--nav-height));
        margin-bottom: calc(3 * var(--spacer));
    }

    .container {
        max-width: var(--container-width);
        padding-inline: var(--container-padding);
        margin: 0 auto;
    }

    .flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacer);
    }

    .flex.equal {
        > * {
            flex-basis: 100%;
        }
    }

    .flex.vertical-split {
        flex-direction: column;
        align-items: center;
        --first-split: 80%;

        > *:first-child {
            flex-basis: var(--first-split);
        }

        > *:last-child {
            flex-basis: calc(100% - var(--first-split));
        }
    }

    .flow-content > * + * {
        margin-top: var(--flow-space, var(--spacer));
    }

    @media (min-width: 40rem) {
        :root {
            --spacer: 2rem;
            --container-padding: calc(5rem + 2rem);

            --fs-h1: 3.5rem;
            --fs-h2: 2.375rem;
            --fs-h3: 2.25rem;
            --fs-h4: 1.25rem;
        }

        body {
            background: linear-gradient(180deg, var(--clr-surface) 62vh, var(--clr-background) 62vh);
        }

        .flex.vertical-split {
            align-items: end;
        }
    }

    @media (min-width: 60rem) {
        .flex.vertical-split {
            flex-direction: row;
            align-items: start;
        }
    }

    .visible {
        opacity: 1;
        pointer-events: auto;
    }

    .hidden {
        opacity: 0 !important;
        pointer-events: none;
    }

    .no-scroll {
        overflow: hidden;
    }

    .light-font {
        font-size: var(--fs-small);
        color: var(--clr-text);
        opacity: 0.7;
    }

    .placeholder-background {
        width: 100%;
        height: 100%;
        background-color: var(--clr-text);
        mask-image: url("../assets/placeholder.svg");
        -webkit-mask-image: url("../assets/placeholder.svg");
    }

    .card {
        position: relative;
        
        > a:first-child::before {
            content: ' ';
            position: absolute;
            inset: 0;
            z-index: 1;
        }
        
        .img-wrapper {
            overflow: hidden;

            img {
                filter: grayscale(80%);
                opacity: 0.6;
                transition: all 0.3s ease-in-out;
            }
        }

        &:hover {
            .img-wrapper img {
                transform: scale(105%);
                filter: grayscale(0%);
                opacity: 1;
            }
        }
    }
</style>