---
import PostList from "@components/organisms/PostList.astro";
import Layout from "@layouts/Layout.astro";
import { data } from "@scripts/data.js";

export async function getStaticPaths({ paginate }) {
    const articles = data.articles;

    return paginate(articles, {
        pageSize: 5,
    });
}

const { page } = Astro.props;
const { data: articles, currentPage, lastPage, url } = page;
---

<Layout
    title="Blog | Kaja Limisiewicz"
    description={`Recent posts in my blog.`}
>
    <PostList articles={articles} pageData={{ currentPage, lastPage, url }} />
</Layout>
